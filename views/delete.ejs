<%- partial ('partials/statusmessage.ejs') %>

<h2>Delete Student</h2>

<div style="text-align: center; padding-top:50px">
  <form action="/delete" method="POST">
    <div class="form-group">
      <label for="student_id">SELECT A STUDENT TO DELETE</label><br/>

      <select class="selectpicker" name="student_id" data-live-search="true" data-header="Select a student" title="Select one of the following">
      <% if(typeof students != "undefined" && students.length > 0){ %>
        <% students.forEach(function(student){ %>
          <option value="<%= student.student_id %>" data-icon="glyphicon glyphicon-user">
            <%= student.last_name + ", " +  student.first_name %>
          </option>
        <% }) %>
      <% } %>
      </select>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-danger">
        DELETE STUDENT
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </button>
    </div>
  </form>
</div>
